{
  "name": "@dropthought/dt-common",
  "version": "1.1.0-beta.1",
  "description": "Dropthought common libs",
  "main": "src/index.js",
  "types": "lib/index.d.ts",
  "react-native": "lib/index",
  "source": "lib/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "typescript": "tsc --noEmit",
    "prepare": "husky install; ts-patch install -s",
    "prepack": "yarn build",
    "release": "release-it",
    "build": "tsc --project tsconfig.production.json",
    "prebuild": "rm -rf lib && mkdir lib"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://gitlab.com/bct-taipei/dt-common",
  "author": "BCT-Barney <barney.chen@bahwancybertek.com> (https://gitlab.com/BCT-Barney)",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/bct-taipei/dt-common/issues"
  },
  "homepage": "https://gitlab.com/bct-taipei/dt-common#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.2.2",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/react-native": "^12.1.2",
    "@types/jest": "^26.0.23",
    "@types/ramda": "^0.27.44",
    "@types/react": "^17.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^29.2.1",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^6.0.0",
    "jest": "^29.6.3",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-dom": "^17.0.0",
    "release-it": "^15.0.0",
    "ts-patch": "^2.0.1",
    "typescript": "^4.5.5",
    "typescript-transform-paths": "^3.3.1"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "packageManager": "^yarn@1.22.15",
  "jest": {
    "preset": "@testing-library/react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native-community|@react-native|react-native)/)"
    ],
    "setupFiles": [
      "./scripts/jestSetup.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "dependencies": {
    "ramda": "^0.27.1",
    "react-native": "0.71.6"
  }
}
